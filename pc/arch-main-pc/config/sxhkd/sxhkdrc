#
# wm independent hotkeys
#

# terminal emulator
super + Return
	cool-retro-term

super + a
	alacritty

# program launcher
super + @space
	rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus using the directional keys (vim keybinds don't make sense to me yet waah waah
#super + {_,shift + }{Left,Down,Up,Right}
#        bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

alt + {_,shift + }{1-9,0}
    bspc {desktop -f, window -d} $(bspc query -M -m)/{a,b,c}

alt + Tab
	rofi -show window

super + d
	rofi -show drun

super + semicolon
	rofi -show emoji -modi emoji

alt + w
        bspc monitor -f next

#
# misc. program and script shortcuts
#

super + a
	alacritty

super + Print
	maim -m 10 -f png ~/Pictures/Saved\ Folders/Screenshots/Arch\ Linux/$(date +%Y-%m-%d--%H-%M-%S)-arch-linux-screen.png && sleep 0.5 && xclip -selection clipboard -t image/png ~/Pictures/Saved\ Folders/Screenshots/Arch\ Linux/$(ls -Art ~/Pictures/Saved\ Folders/Screenshots/Arch\ Linux/ | tail -n 1)

super + shift + s
	maim -s -m 10 -f png ~/Pictures/Saved\ Folders/Screenshots/Arch\ Linux/Fresh\ Cuts/$(date +%Y-%m-%d--%H-%M-%S)-arch-linux-crop.png && sleep 0.5 && xclip -selection clipboard -t image/png -i ~/Pictures/Saved\ Folders/Screenshots/Arch\ Linux/Fresh\ Cuts/$(ls -Art ~/Pictures/Saved\ Folders/Screenshots/Arch\ Linux/Fresh\ Cuts/ | tail -n 1)

super + e
	nautilus

super + r
	alacritty --class ranger -e zsh -ic ranger &

super + alt + m
	alacritty --class ncmpcpp -e zsh -ic ncmpcpp &

super + shift + m
	~/SYGtech/goteki-git/-nix-shell-scripts/toggle_mic.sh

super + alt + c
	alacritty -e cava & ; sleep 1 ; bspc node -t floating ; bspc node -g sticky ; bspc node -z top 0 350 ; bspc node -v 540 220

ctrl + shift + Escape
	cool-retro-term -e top
	
ctrl + shift + e
	cool-retro-term -e htop

#
# media controls
#

XF86AudioMute
        amixer -D pulse set Master 1+ toggle

XF86AudioLowerVolume
        amixer -D pulse set Master 1+ 5%-

XF86AudioRaiseVolume
        amixer -D pulse set Master 1+ 5%+

XF86AudioPlay
	playerctl play-pause &

XF86AudioStop
	playerctl stop &

XF86AudioPrev
	playerctl previous &

XF86AudioNext
	playerctl next &

#
# mouse
#

super + {Left,Down,Up,Right}
	xdotool mousemove_relative {-- -8 0, 0 8, -- 0 -8, 8 0}

super + shift + {Left,Down,Up,Right}
	xdotool mousemove_relative {-- -48 0, 0 48, -- 0 -48, 48 0}

super + alt + Return
	xdotool click 1 --clearmodifiers --delay 100

super + alt + BackSpace
	xdotool click 3 --clearmodifiers --delay 100

super + alt + Prior
	xdotool click 4 --clearmodifiers

super + alt + Next
	xdotool click 5 --clearmodifiers
