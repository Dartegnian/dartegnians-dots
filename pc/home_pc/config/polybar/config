;===================================================================
;                        Upload + Download
;===================================================================

[module/download]
type = internal/network
interface = enp27s0
interval = 1

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-icon}
format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-disconnected-prefix = " "

label-connected = "%downspeed% "
label-disconnected = "Down"

[module/upload]
type = internal/network
interface = enp27s0
interval = 1

format-connected-prefix = "   "
format-connected-prefix-foreground = ${colors.foreground-icon}
format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-disconnected-prefix = "   "

label-connected = "%upspeed%"
label-disconnected = "Down"


;===================================================================
;                                Date
;===================================================================

[module/date]
type = internal/date
interval = 1

label-foreground = #FFFFFF
label = %date%
date = "    %I:%M %p"
date-alt = "    %A, %d %B, %Y     %I:%M %p"


;===================================================================
;                             PulseAudio
;===================================================================

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
;sink = alsa_output.pci-0000_03_06.0.iec958-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.foreground-icon}

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
label-volume = "%percentage%%"
label-volume-foreground = ${colors.foreground}

;
;  
; Available tokens:
;   %percentage% (default)
label-muted = " 0%"
label-muted-foreground = 

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


;===================================================================
;                            Power Menu
;===================================================================

[module/powermenu]
type = custom/menu

expand-right = false
;
format-padding = 0
format-spacing = 2
label-open = " "
label-close = "|     "


menu-0-0 = "   "
menu-0-0-exec = poweroff
menu-0-1 = "   "
menu-0-1-exec = reboot
menu-0-2 = "  "
menu-0-2-exec = bspc quit


;===================================================================
;                       Program Shortcuts
;===================================================================
; Functions
; Icon - Left | Middle | Right //OR// Left | Right
;
; Code - Open VSCode | Start NeoVim in Cool Retro Term
; Terminal - Cool Retro Term | Urxvt | Alacritty
; Git - Open Git client | Pull/Update Oh My Zsh
;
; Firefox - Open Firefox | Open Firefox (Developer Edition)
; Chrome - Open Google Chrome | Open Google Chrome Beta | Open Google Chrome Dev
; Edge - Open Tinder PWA | Browse Netflix | View Facebook Messenger (web)
; YouTube - Browse Youtube | Open "Hot Muzik" playlist | Check YouTube subscriptions
; Audio - Open Lollypop | Control PulseAudio volume | Start CPod
; 
; Minimize - Shrink current window from the bottom | Shrink current window from the top
; Maximize - Toggle monocle layout on Bspwm
; Close - Close window | Kill window's main process


; //object[] devTools
[module/code]
type = custom/text

content = " "
content-foreground = ${colors.foreground-icon}

click-left = code &
click-right = cool-retro-term -e nvim &

[module/terminal]
type = custom/text

content = "   "
content-foreground = ${colors.foreground-icon}

click-left = cool-retro-term &
click-middle = urxvt-tabbed &
click-right = alacritty &

[module/git]
type = custom/text

content = "    |"
content-foreground = ${colors.foreground-icon}

click-left = gitkraken &
click-middle = npm update -g &
click-right = cd ~/.oh-my-zsh && git pull &


; Standard icons
[module/firefox]
type = custom/text

content = " 龜 "
content-foreground = ${colors.foreground-icon}

click-left = firefox &
click-right = firefox-developer-edition &

[module/chrome]
type = custom/text

content = "   "
content-foreground = ${colors.foreground-icon}

click-left = firefox -url https://google.com &
click-middle = google-chrome-unstable &
click-right = google-chrome-beta &

[module/edge]
