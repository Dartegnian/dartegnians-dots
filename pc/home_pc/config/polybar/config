click-left = lollypop &
click-middle = pavucontrol &
click-right = cpod &


[module/minimize]
type = custom/text

content = " "
content-foreground = ${colors.foreground-icon}

click-left = bspc node -z bottom 0 -200 &
click-right = bspc node -z top 0 200 &

[module/maximize]
type = custom/text

content = "   "
content-foreground = ${colors.foreground-icon}

click-left = bspc desktop -l next &

[module/close]
type = custom/text

content = "  | "
content-foreground = ${colors.foreground-icon}

click-left = bspc node -c &
click-right = bspc node -k &

