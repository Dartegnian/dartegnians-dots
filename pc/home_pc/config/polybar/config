click-left = google-chrome-stable --app-id=jgeocpdicgmkeemopbanhokmhcgcflmi &
click-middle = firefox "https://twitter.com/home" &
click-right = google-chrome-stable "https://twitter.com/home" &

[module/audio]
type = custom/text

content = "    | "
