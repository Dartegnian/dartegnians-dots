content-foreground = ${colors.foreground-icon}

click-left = opera "https://www.youtube.com" &
click-middle = opera "https://www.youtube.com/playlist?list=PLMBv7J0cbV5z2MnH5OY0FfdOhQc2DW3WV" &
click-right = opera "https://www.youtube.com/feed/subscriptions" &

[module/twitter]
